[build]
  publish = "/"
  functions = "netlify/functions"

# Serve the web app (no framework build).
[[redirects]]
  from = "/api/*"
  to = "/.netlify/functions/:splat"
  status = 200

# Make sure the manifest has the correct content type.
[[headers]]
  for = "/manifest.webmanifest"
  [headers.values]
    Content-Type = "application/manifest+json; charset=UTF-8"
