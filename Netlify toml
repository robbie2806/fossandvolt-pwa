[build]
  publish = "."
  command = "echo 'Volt PWA - No build needed'"

[build.environment]
  NODE_VERSION = "18"

# CRITICAL: API redirects MUST come first and be EXACTLY like this
[[redirects]]
  from = "/api/*"
  to = "/.netlify/functions/:splat"
  status = 200
  force = true

# Alternative API redirect (if above doesn't work)  
[[redirects]]
  from = "/api/ping"
  to = "/.netlify/functions/ping"
  status = 200
  force = true

# Debug redirect to test if redirects work at all
[[redirects]]
  from = "/test-redirect"
  to = "/index.html"
  status = 200

# SPA fallback - MUST be last
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

# Function configuration
[functions]
  directory = "netlify/functions"

# Headers for debugging
[[headers]]
  for = "/.netlify/functions/*"
  [headers.values]
    Access-Control-Allow-Origin = "*"
    Access-Control-Allow-Headers = "Content-Type"
    Access-Control-Allow-Methods = "GET, POST, OPTIONS"
    X-Debug = "Volt-PWA-Function"

[[headers]]
  for = "/api/*"
  [headers.values]
    X-Debug = "Volt-PWA-API-Route"

# Prevent caching during development
[[headers]]
  for = "/netlify.toml"
  [headers.values]
    Cache-Control = "no-cache"
