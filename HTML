  <script>
    document.getElementById('subBtn').addEventListener('click', async () => {
      const r = await fetch('/api/subscribe', { method: 'POST' });
      const { url, error } = await r.json();
      if (url) location.href = url; else alert(error || 'Could not start checkout.');
    });
  </script>
